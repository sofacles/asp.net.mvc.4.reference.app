@using BikeStore.Models;
@using DAL;

@model ProductListViewModel

@{
	
	ViewBag.Title = "Products";
}

<script type="text/javascript">
	var orderID = '@Model.OrderID';
</script>
	
    <div class="product-list container">
        @foreach (Product product in Model.Products)
		{
			<section class="cell col-xs-12 col-sm-6 col-md-4 col-lg-3">
				<header>
					<h2> @product.name</h2>
					<div class="product-name"> @product.description </div> 
					<!-- TODO: increment quantity -->
				</header>
				<footer>
					<span class="price">@product.price</span>
					<input type="button" class="btn btn-success" value="add to cart" onclick="OrderUpdater.addToCart('@product.id')" />
				</footer>
				
			</section>
		}
    </div>
	<div class="checkout-container"></div> 



